@page
@model AtlasViewer.Pages.ArtePesca.DetailsModel
@{
    ViewData["Title"] = "Detalles de Arte de Pesca";
}

<section class="page-section">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-eye"></i> Detalles de Arte de Pesca</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Código:</dt>
                <dd class="col-sm-9"><code>@Model.ArtePesca.codigo</code></dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9"><strong>@Model.ArtePesca.nombre</strong></dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@Model.ArtePesca.descripcion</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">
                    @if (Model.ArtePesca.activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>

            <div class="d-flex gap-2 mt-4">
                <a asp-page="Edit" asp-route-id="@Model.ArtePesca.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</section>
