@page
@model AtlasViewer.Pages.ArtePesca.EditModel
@{
    ViewData["Title"] = "Editar Arte de Pesca";
}

<section class="page-section">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="bi bi-pencil"></i> Editar Arte de Pesca</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="ArtePesca.Id" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ArtePesca.codigo" class="form-label">Código <span class="text-danger">*</span></label>
                        <input asp-for="ArtePesca.codigo" class="form-control" placeholder="Ej: ART001" />
                        <span asp-validation-for="ArtePesca.codigo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ArtePesca.nombre" class="form-label">Nombre <span class="text-danger">*</span></label>
                        <input asp-for="ArtePesca.nombre" class="form-control" placeholder="Nombre del arte de pesca" />
                        <span asp-validation-for="ArtePesca.nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ArtePesca.descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="ArtePesca.descripcion" class="form-control" rows="3" placeholder="Descripción del arte de pesca"></textarea>
                    <span asp-validation-for="ArtePesca.descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="ArtePesca.activo" class="form-check-input" type="checkbox" />
                    <label asp-for="ArtePesca.activo" class="form-check-label">Activo</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle"></i> Guardar Cambios
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
