@page
@model AtlasViewer.Pages.Pescadores.DetailsModel
@{
    ViewData["Title"] = "Detalles del Pescador";
    Layout = "../Shared/_Layout";
}
<section class="container details-pescador-page" aria-labelledby="details-title">
    <h1 id="details-title" class="h4">Detalles del Pescador</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-light">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Pescador.nombre</dd>
                        
                        <dt class="col-sm-4">Identificaci√≥n:</dt>
                        <dd class="col-sm-8">@Model.Pescador.identificacion</dd>
                        
                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Pescador.activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">Embarcaciones:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Pescador.embarcaciones.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var embarcacion in Model.Pescador.embarcaciones)
                                    {
                                        <li><i class="bi bi-dot"></i> @embarcacion</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <em class="text-muted">Sin embarcaciones registradas</em>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            
            <div class="mt-3 d-flex gap-2">
                <a asp-page="Edit" asp-route-id="@Model.Pescador.Id" class="btn btn-primary">Editar</a>
                <a asp-page="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </div>
    </div>
</section>
