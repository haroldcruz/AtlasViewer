@page
@model AtlasViewer.Pages.Pescadores.IndexModel
@{
    ViewData["Title"] = "Pescadores";
    Layout = "../Shared/_Layout";
}
<section class="container pescadores-page" aria-labelledby="pescadores-title">
    <h1 id="pescadores-title" class="h4 pescadores-title">Gestión de Pescadores</h1>
    
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <script nonce="@@Context.Items["csp-nonce"]">
            Swal.fire({
                icon: 'success',
                title: 'Éxito',
                text: '@Model.SuccessMessage',
                timer: 2000,
                showConfirmButton: false
            });
        </script>
    }
    
    <div class="table-wrap">
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Identificación</th>
                        <th>Embarcaciones</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Pescadores)
                    {
                        <tr>
                            <td>@p.nombre</td>
                            <td>@p.identificacion</td>
                            <td>@p.embarcaciones.Count</td>
                            <td>
                                @if (p.activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-primary">Editar</a>
                                <a asp-page="Details" asp-route-id="@p.Id" class="btn btn-sm btn-secondary">Ver</a>
                                <a asp-page="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="pescadores-actions">
        <a asp-page="Create" class="btn btn-success">Nuevo Pescador</a>
    </div>
</section>
