@page "{id}"
@model AtlasViewer.Pages.Usuarios.EditModel
@{
 ViewData["Title"] = "Editar Usuario";
 Layout = "../Shared/_Layout";
}
<section class="container usuarios-page" aria-labelledby="usuarios-edit-title">
 <h1 id="usuarios-edit-title" class="h4 usuarios-title">Editar Usuario</h1>
 <form method="post" class="usuarios-form">
 <input type="hidden" asp-for="Usuario.Id" />
 <div class="form-row">
 <label for="nombre">Nombre</label>
 <input id="nombre" asp-for="Usuario.nombre" class="form-control" />
 <span asp-validation-for="Usuario.nombre" class="text-danger"></span>
 </div>
 <div class="form-row">
 <label for="email">Email</label>
 <input id="email" asp-for="Usuario.email" class="form-control" />
 <span asp-validation-for="Usuario.email" class="text-danger"></span>
 </div>
 <div class="form-row">
 <label for="rol">Rol</label>
 <select id="rol" asp-for="Usuario.rol" class="form-control" asp-items="Model.RolesSelect"></select>
 <span asp-validation-for="Usuario.rol" class="text-danger"></span>
 </div>
 <div class="usuarios-actions">
 <button type="submit" class="btn btn-primary">Guardar</button>
 <a asp-page="Index" class="btn btn-secondary">Volver</a>
 </div>
 </form>
 @section Scripts { <partial name="_ValidationScriptsPartial" /> }
</section>