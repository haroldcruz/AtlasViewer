@page "{id}"
@model AtlasViewer.Pages.Usuarios.DeleteModel
@{
 ViewData["Title"] = "Eliminar Usuario";
 Layout = "../Shared/_Layout";
}

<h2 class="usuarios-title">Eliminar Usuario</h2>
<div class="alert alert-warning">
 <p><strong>Â¿Seguro que deseas eliminar este usuario?</strong></p>
 <p>Nombre: <strong>@Model.Nombre</strong></p>
 <p>Email: <strong>@Model.Email</strong></p>
</div>

<form method="post">
 <input type="hidden" name="id" value="@Model.Id" />
 <div class="form-actions">
 <button type="submit" class="btn btn-danger">Eliminar</button>
 <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
 </div>
</form>