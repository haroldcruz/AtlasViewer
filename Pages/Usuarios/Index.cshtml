@page
@model AtlasViewer.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuarios";
    Layout = "../Shared/_Layout";
}
<section class="container usuarios-page" aria-labelledby="usuarios-title">
    <h1 id="usuarios-title" class="h4 usuarios-title">Usuarios</h1>
    <div class="table-wrap">
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model.Usuarios)
                    {
                        <tr>
                            <td>@u.nombre</td>
                            <td>@u.email</td>
                            <td>@(u.rol ==1 ? "Administrador" : "Usuario")</td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-primary">Editar</a>
                                <a asp-page="Details" asp-route-id="@u.Id" class="btn btn-sm btn-secondary">Ver</a>
                                <a asp-page="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="usuarios-actions">
        <a asp-page="Create" class="btn btn-success">Nuevo Usuario</a>
    </div>
</section>