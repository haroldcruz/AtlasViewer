@page
@model AtlasViewer.Pages.Embarcaciones.DetailsModel
@{
    ViewData["Title"] = "Detalles de la Embarcación";
    Layout = "../Shared/_Layout";
}
<section class="container details-embarcacion-page" aria-labelledby="details-title">
    <h1 id="details-title" class="h4">Detalles de la Embarcación</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-light">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Embarcacion.nombre</dd>
                        
                        <dt class="col-sm-4">Matrícula:</dt>
                        <dd class="col-sm-8">@Model.Embarcacion.matricula</dd>
                        
                        <dt class="col-sm-4">Propietario:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Embarcacion.propietario) ? "-" : Model.Embarcacion.propietario)</dd>
                        
                        <dt class="col-sm-4">Pescador Asignado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Pescador != null)
                            {
                                <div>
                                    <strong>@Model.Pescador.nombre</strong><br />
                                    <small class="text-muted">ID: @Model.Pescador.identificacion</small>
                                </div>
                            }
                            else
                            {
                                <em class="text-muted">Sin asignar</em>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Embarcacion.activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            
            <div class="mt-3 d-flex gap-2">
                <a asp-page="Edit" asp-route-id="@Model.Embarcacion.Id" class="btn btn-primary">Editar</a>
                <a asp-page="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </div>
    </div>
</section>
