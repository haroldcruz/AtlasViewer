@page
@model AtlasViewer.Pages.Embarcaciones.IndexModel
@{
    ViewData["Title"] = "Embarcaciones";
    Layout = "../Shared/_Layout";
}
<section class="container embarcaciones-page" aria-labelledby="embarcaciones-title">
    <h1 id="embarcaciones-title" class="h4 embarcaciones-title">Gestión de Embarcaciones</h1>
    
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>¡Éxito!</strong> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="table-wrap">
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Matrícula</th>
                        <th>Pescador (Propietario)</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Embarcaciones)
                    {
                        var pescador = Model.Pescadores.FirstOrDefault(p => p.Id == e.pescadorId);
                        <tr>
                            <td>@e.nombre</td>
                            <td>@e.matricula</td>
                            <td>
                                @if (pescador != null)
                                {
                                    <div>
                                        <strong>@pescador.nombre</strong><br/>
                                        <small class="text-muted">ID: @pescador.identificacion</small>
                                    </div>
                                }
                                else
                                {
                                    <em class="text-muted">Sin asignar</em>
                                }
                            </td>
                            <td>
                                @if (e.activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-primary">Editar</a>
                                <a asp-page="Details" asp-route-id="@e.Id" class="btn btn-sm btn-secondary">Ver</a>
                                <a asp-page="Delete" asp-route-id="@e.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="embarcaciones-actions">
        <a asp-page="Create" class="btn btn-success">Nueva Embarcación</a>
    </div>
</section>
