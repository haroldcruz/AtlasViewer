@page
@model AtlasViewer.Pages.Proveedores.DeleteModel
@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<section class="page-section">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Eliminar Proveedor</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>¿Está seguro que desea eliminar este proveedor?</strong>
                <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Nombre</h6>
                    <p class="fs-5">@Model.Proveedor.nombre</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Estado</h6>
                    <p>
                        @if (Model.Proveedor.activo)
                        {
                            <span class="badge bg-success fs-6">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6">Inactivo</span>
                        }
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Teléfono</h6>
                    @if (!string.IsNullOrEmpty(Model.Proveedor.telefono))
                    {
                        <p class="fs-5">
                            <i class="bi bi-telephone text-primary"></i> @Model.Proveedor.telefono
                        </p>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No registrado</p>
                    }
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Correo Electrónico</h6>
                    @if (!string.IsNullOrEmpty(Model.Proveedor.correo))
                    {
                        <p class="fs-5">
                            <i class="bi bi-envelope text-primary"></i> @Model.Proveedor.correo
                        </p>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No registrado</p>
                    }
                </div>
            </div>

            <hr class="my-4" />

            <form method="post">
                <input type="hidden" asp-for="Proveedor.Id" />
                <input type="hidden" asp-for="Proveedor.nombre" />
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirmar Eliminación
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>
