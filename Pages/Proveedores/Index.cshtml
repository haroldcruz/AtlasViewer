@page
@model AtlasViewer.Pages.Proveedores.IndexModel
@{
    ViewData["Title"] = "Proveedores";
}

<section class="page-section">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-truck"></i> Proveedores de Insumos</h3>
            <a asp-page="Create" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> Nuevo Proveedor
            </a>
        </div>
        <div class="card-body">
            @if (Model.Proveedores.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay proveedores registrados. 
                    <a asp-page="Create" class="alert-link">Crear el primero</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-info">
                            <tr>
                                <th>Nombre</th>
                                <th>Tel√©fono</th>
                                <th>Correo</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var proveedor in Model.Proveedores)
                            {
                                <tr>
                                    <td><strong>@proveedor.nombre</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(proveedor.telefono))
                                        {
                                            <i class="bi bi-telephone"></i> @proveedor.telefono
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(proveedor.correo))
                                        {
                                            <i class="bi bi-envelope"></i> @proveedor.correo
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (proveedor.activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-page="Details" asp-route-id="@proveedor.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@proveedor.Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@proveedor.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</section>
