@page
@model AtlasViewer.Pages.Proveedores.DetailsModel
@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<section class="page-section">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Detalles del Proveedor</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Nombre</h6>
                    <p class="fs-5">@Model.Proveedor.nombre</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Estado</h6>
                    <p>
                        @if (Model.Proveedor.activo)
                        {
                            <span class="badge bg-success fs-6">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6">Inactivo</span>
                        }
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Teléfono</h6>
                    @if (!string.IsNullOrEmpty(Model.Proveedor.telefono))
                    {
                        <p class="fs-5">
                            <i class="bi bi-telephone text-primary"></i> @Model.Proveedor.telefono
                        </p>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No registrado</p>
                    }
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Correo Electrónico</h6>
                    @if (!string.IsNullOrEmpty(Model.Proveedor.correo))
                    {
                        <p class="fs-5">
                            <i class="bi bi-envelope text-primary"></i> 
                            <a href="mailto:@Model.Proveedor.correo">@Model.Proveedor.correo</a>
                        </p>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No registrado</p>
                    }
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex gap-2">
                <a asp-page="Edit" asp-route-id="@Model.Proveedor.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-page="Delete" asp-route-id="@Model.Proveedor.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</section>
