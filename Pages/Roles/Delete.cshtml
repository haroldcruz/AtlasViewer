@page "{id}"
@model AtlasViewer.Pages.Roles.DeleteModel
@{
 ViewData["Title"] = "Eliminar Rol";
 Layout = "../Shared/_Layout";
}
<section class="container roles-page" aria-labelledby="role-delete-title">
 <h1 id="role-delete-title" class="h4">Eliminar Rol</h1>
 <p>¿Confirma eliminar el rol <strong>@Model.Rol.nombre_rol</strong>?</p>
 <form method="post" class="usuarios-actions">
 <input type="hidden" asp-for="Rol.Id" />
 <button type="submit" class="btn btn-outline-danger">Eliminar</button>
 <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
 </form>
</section>
