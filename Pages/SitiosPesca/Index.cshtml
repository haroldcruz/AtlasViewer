@page
@model AtlasViewer.Pages.SitiosPesca.IndexModel
@{
    ViewData["Title"] = "Sitios de Pesca";
}

<section class="page-section">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-geo-alt"></i> Gestión de Sitios de Pesca</h3>
            <a asp-page="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Nuevo Sitio de Pesca
            </a>
        </div>
        <div class="card-body">
            @if (Model.SitiosPesca == null || !Model.SitiosPesca.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay sitios de pesca registrados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Coordenadas</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sitio in Model.SitiosPesca)
                            {
                                <tr>
                                    <td><code>@sitio.codigo</code></td>
                                    <td><strong>@sitio.nombre</strong></td>
                                    <td>@sitio.descripcion</td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt-fill"></i> 
                                            @sitio.latitud.ToString("F6"), @sitio.longitud.ToString("F6")
                                        </small>
                                    </td>
                                    <td>
                                        @if (sitio.activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="Details" asp-route-id="@sitio.Id" class="btn btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@sitio.Id" class="btn btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@sitio.Id" class="btn btn-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</section>
