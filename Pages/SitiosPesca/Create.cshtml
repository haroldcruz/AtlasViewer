@page
@model AtlasViewer.Pages.SitiosPesca.CreateModel
@{
    ViewData["Title"] = "Nuevo Sitio de Pesca";
}

<section class="page-section">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Nuevo Sitio de Pesca</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SitioPesca.codigo" class="form-label">Código <span class="text-danger">*</span></label>
                        <input asp-for="SitioPesca.codigo" class="form-control" placeholder="Ej: SITIO001" />
                        <span asp-validation-for="SitioPesca.codigo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="SitioPesca.nombre" class="form-label">Nombre <span class="text-danger">*</span></label>
                        <input asp-for="SitioPesca.nombre" class="form-control" placeholder="Nombre del sitio de pesca" />
                        <span asp-validation-for="SitioPesca.nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="SitioPesca.descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="SitioPesca.descripcion" class="form-control" rows="3" placeholder="Descripción del sitio de pesca"></textarea>
                    <span asp-validation-for="SitioPesca.descripcion" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SitioPesca.latitud" class="form-label">Latitud <span class="text-danger">*</span></label>
                        <input asp-for="SitioPesca.latitud" class="form-control" type="number" step="0.000001" min="-90" max="90" placeholder="Ej: 9.748917" />
                        <span asp-validation-for="SitioPesca.latitud" class="text-danger"></span>
                        <small class="form-text text-muted">Rango: -90 a 90</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="SitioPesca.longitud" class="form-label">Longitud <span class="text-danger">*</span></label>
                        <input asp-for="SitioPesca.longitud" class="form-control" type="number" step="0.000001" min="-180" max="180" placeholder="Ej: -83.753428" />
                        <span asp-validation-for="SitioPesca.longitud" class="text-danger"></span>
                        <small class="form-text text-muted">Rango: -180 a 180</small>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="SitioPesca.activo" class="form-check-input" type="checkbox" />
                    <label asp-for="SitioPesca.activo" class="form-check-label">Activo</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Crear Sitio de Pesca
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
