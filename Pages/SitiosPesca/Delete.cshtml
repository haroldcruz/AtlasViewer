@page
@model AtlasViewer.Pages.SitiosPesca.DeleteModel
@{
    ViewData["Title"] = "Eliminar Sitio de Pesca";
}

<section class="page-section">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-trash"></i> Eliminar Sitio de Pesca</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>¿Está seguro de que desea eliminar este sitio de pesca?</strong>
                <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Código:</dt>
                <dd class="col-sm-9"><code>@Model.SitioPesca.codigo</code></dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9"><strong>@Model.SitioPesca.nombre</strong></dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@Model.SitioPesca.descripcion</dd>

                <dt class="col-sm-3">Latitud:</dt>
                <dd class="col-sm-9">@Model.SitioPesca.latitud.ToString("F6")</dd>

                <dt class="col-sm-3">Longitud:</dt>
                <dd class="col-sm-9">@Model.SitioPesca.longitud.ToString("F6")</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">
                    @if (Model.SitioPesca.activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="SitioPesca.Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirmar Eliminación
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>
