@page
@model AtlasViewer.Pages.ComprasInsumos.DetailsModel
@{
    ViewData["Title"] = "Detalles de Compra";
}

<section class="page-section">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-receipt"></i> Detalles de la Compra</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <h6 class="text-muted">Fecha de Compra</h6>
                    <p class="fs-5">
                        <i class="bi bi-calendar-event text-primary"></i>
                        @Model.Compra.fecha.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                    </p>
                </div>

                <div class="col-md-4">
                    <h6 class="text-muted">Proveedor</h6>
                    <p class="fs-5">
                        @if (Model.Proveedor != null)
                        {
                            <i class="bi bi-building text-primary"></i>
                            <text>@Model.Proveedor.nombre</text>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Sin proveedor asignado</span>
                        }
                    </p>
                </div>

                <div class="col-md-4">
                    <h6 class="text-muted">Total de la Compra</h6>
                    <p class="fs-4 text-success">
                        <strong>₡@Model.Compra.total.ToString("N2")</strong>
                    </p>
                </div>
            </div>

            <hr class="my-4" />

            <h5 class="mb-3">Detalle de Insumos Comprados</h5>
            
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Insumo</th>
                            <th>Unidad</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Costo Unitario</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in Model.Compra.detalle)
                        {
                            var insumo = Model.InsumosDict.ContainsKey(detalle.insumoId ?? "") 
                                ? Model.InsumosDict[detalle.insumoId!] 
                                : null;
                            <tr>
                                <td>
                                    @if (insumo != null)
                                    {
                                        <code>@insumo.codigo</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td>
                                    @if (insumo != null)
                                    {
                                        <text>@insumo.nombre</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Insumo no encontrado</span>
                                    }
                                </td>
                                <td>
                                    @if (insumo != null)
                                    {
                                        <span class="badge bg-secondary">@insumo.unidad</span>
                                    }
                                </td>
                                <td class="text-center">@detalle.cantidad.ToString("N2")</td>
                                <td class="text-end">₡@detalle.costoUnitario.ToString("N2")</td>
                                <td class="text-end"><strong>₡@detalle.subtotal.ToString("N2")</strong></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-info">
                        <tr>
                            <td colspan="5" class="text-end"><strong>Total:</strong></td>
                            <td class="text-end"><strong>₡@Model.Compra.total.ToString("N2")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <hr class="my-4" />

            <div class="d-flex gap-2">
                @if (User.IsInRole("Administrador"))
                {
                    <a asp-page="Delete" asp-route-id="@Model.Compra.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                }
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Listado
                </a>
            </div>
        </div>
    </div>
</section>
