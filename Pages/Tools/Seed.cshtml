@page
@model SeedModel
@{
 ViewData["Title"] = "Seed de desarrollo";
 Layout = "../Shared/_Layout";
}
<section class="container py-4" aria-labelledby="seed-title">
 <h1 id="seed-title" class="h4">Seed de desarrollo</h1>
 @if (!Model.IsDevelopment)
 {
 <div class="alert alert-warning">Esta página solo está disponible en entorno de desarrollo.</div>
 }
 else
 {
 <p>Use este asistente para crear un usuario de prueba con rol Administrador.</p>
 <form method="post">
 <div class="row g-3">
 <div class="col-sm-6">
 <label class="form-label" for="Nombre">Nombre de usuario</label>
 <input class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" />
 </div>
 <div class="col-sm-6">
 <label class="form-label" for="Email">Email</label>
 <input class="form-control" id="Email" name="Email" value="@Model.Email" />
 </div>
 <div class="col-sm-6">
 <label class="form-label" for="Password">Contraseña</label>
 <input class="form-control" id="Password" name="Password" type="text" value="@Model.Password" />
 </div>
 <div class="col-12">
 <button type="submit" class="btn btn-primary">Crear/Actualizar usuario</button>
 </div>
 </div>
 </form>

 @if (!string.IsNullOrEmpty(Model.ResultMessage))
 {
 <div class="alert alert-info mt-3">@Model.ResultMessage</div>
 <pre class="bg-dark text-light p-3 mt-2"><code>
{ "nombre": "@Model.Nombre", "email": "@Model.Email", "rol":1, "hash": "@Model.HashGenerado" }
 </code></pre>
 }
 }
</section>