@page
@model AtlasViewer.Pages.RegistrosCapturas.IndexModel
@{
    ViewData["Title"] = "Registros de Capturas";
}

<section class="page-section">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-clipboard-check"></i> Registros de Capturas</h3>
            <button type="button" class="btn btn-light" id="btnNuevoRegistro">
                <i class="bi bi-plus-circle"></i> Nuevo Registro
            </button>
        </div>
        <div class="card-body">
            <!-- Formulario de búsqueda -->
            <div class="card mb-3">
                <div class="card-body">
                    <form method="get" class="row g-3 form-search">
                        <div class="col-md-3">
                            <label class="form-label">Pescador</label>
                            <input type="text" name="busquedaPescador" class="form-control" value="@Model.BusquedaPescador" placeholder="Nombre del pescador">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Fecha desde</label>
                            <input type="date" name="busquedaFechaDesde" class="form-control" value="@(Model.BusquedaFechaDesde?.ToString("yyyy-MM-dd"))">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Fecha hasta</label>
                            <input type="date" name="busquedaFechaHasta" class="form-control" value="@(Model.BusquedaFechaHasta?.ToString("yyyy-MM-dd"))">
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Buscar
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Limpiar
                            </a>
                        </div>
                    </form>
                    @if (!Model.MostrarTodos && string.IsNullOrWhiteSpace(Model.BusquedaPescador) && !Model.BusquedaFechaDesde.HasValue && !Model.BusquedaFechaHasta.HasValue)
                    {
                        <div class="mt-2">
                            <small class="text-muted">Mostrando los 10 registros más recientes.</small>
                            <a asp-page="Index" asp-route-mostrarTodos="true" class="btn btn-sm btn-link">Ver todos</a>
                        </div>
                    }
                </div>
            </div>
            @if (Model.Registros.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay registros de capturas. 
                    <a asp-page="Create" class="alert-link">Crear el primero</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-success">
                            <tr>
                                <th>Fecha</th>
                                <th>Hora</th>
                                <th>Pescador</th>
                                <th>Embarcación</th>
                                <th>Sitio</th>
                                <th>Arte</th>
                                <th>Capturas</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var registro in Model.Registros)
                            {
                                <tr>
                                    <td>@registro.fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@registro.hora</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(registro.pescadorId) && Model.PescadoresDict.ContainsKey(registro.pescadorId))
                                        {
                                            @Model.PescadoresDict[registro.pescadorId]
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(registro.embarcacionId) && Model.EmbarcacionesDict.ContainsKey(registro.embarcacionId))
                                        {
                                            @Model.EmbarcacionesDict[registro.embarcacionId]
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(registro.sitioPescaId) && Model.SitiosDict.ContainsKey(registro.sitioPescaId))
                                        {
                                            @Model.SitiosDict[registro.sitioPescaId]
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(registro.artePescaId) && Model.ArtesDict.ContainsKey(registro.artePescaId))
                                        {
                                            @Model.ArtesDict[registro.artePescaId]
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@(registro.capturas?.Count ?? 0) especies</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-page="Details" asp-route-id="@registro.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@registro.Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@registro.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script nonce="@HttpContext.Items["csp-nonce"]">
        // Agregar event listener al botón
        document.getElementById('btnNuevoRegistro').addEventListener('click', function() {
            // Ir directo a crear (sin verificación de borrador porque este formulario no usa persistencia)
            window.location.href = '/RegistrosCapturas/Create';
        });
    </script>
}
