@page
@model AtlasViewer.Pages.Insumos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Insumo";
}

<section class="page-section">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Eliminar Insumo</h3>
        </div>
        <div class="card-body">
            @if (Model.Insumo == null)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> Insumo no encontrado.
                </div>
                <a asp-page="Index" class="btn btn-secondary">Volver al listado</a>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>¿Está seguro de que desea eliminar este insumo?</strong>
                    <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5>Información del Insumo</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Código:</dt>
                                    <dd class="col-sm-8"><strong>@Model.Insumo.codigo</strong></dd>

                                    <dt class="col-sm-4">Nombre:</dt>
                                    <dd class="col-sm-8">@Model.Insumo.nombre</dd>

                                    <dt class="col-sm-4">Unidad:</dt>
                                    <dd class="col-sm-8">@Model.Insumo.unidad</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">Inventario:</dt>
                                    <dd class="col-sm-7">@Model.Insumo.inventarioActual.ToString("N2")</dd>

                                    <dt class="col-sm-5">Precio Compra:</dt>
                                    <dd class="col-sm-7">₡@Model.Insumo.precioPromedioCompra.ToString("N2")</dd>

                                    <dt class="col-sm-5">Precio Promedio de Venta:</dt>
                                    <dd class="col-sm-7">₡@Model.Insumo.precioPromedioVenta.ToString("N2")</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Insumo.Id" />
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Eliminación
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            }
        </div>
    </div>
</section>
