@page
@model AtlasViewer.Pages.Account.ChangePasswordModel
@{
 ViewData["Title"] = "Cambiar contraseña";
}
<section class="container" aria-labelledby="change-password-title">
 <div class="row justify-content-center">
 <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
 <div class="card shadow border-0">
 <div class="card-header">
 <h1 id="change-password-title" class="h4 mb-0">Cambiar contraseña</h1>
 </div>
 <div class="card-body p-4">
 <p class="text-muted">Debe cambiar su contraseña para continuar.</p>
 <form method="post" novalidate>
 <div class="mb-3">
 <label for="current">Contraseña actual</label>
 <input id="current" name="Current" type="password" class="form-control" autocomplete="current-password" required />
 </div>
 <div class="mb-3">
 <label for="new">Nueva contraseña</label>
 <input id="new" name="New" type="password" class="form-control" autocomplete="new-password" required />
 </div>
 <div class="mb-3">
 <label for="confirm">Confirmar nueva contraseña</label>
 <input id="confirm" name="Confirm" type="password" class="form-control" autocomplete="new-password" required />
 </div>
 <div class="d-flex gap-2">
 <button type="submit" class="btn btn-primary">Actualizar</button>
 <a class="btn btn-outline-secondary" asp-page="/Usuarios/Index">Cancelar</a>
 </div>
 </form>
 </div>
 </div>
 </div>
 </div>
</section>
