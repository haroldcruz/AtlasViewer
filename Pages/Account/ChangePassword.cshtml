@page
@model AtlasViewer.Pages.Account.ChangePasswordModel
@{
 ViewData["Title"] = "Cambiar contraseña";
 Layout = "../Shared/_Layout";
}
<section class="container" aria-labelledby="change-password-title">
 <h1 id="change-password-title" class="h4">Cambiar contraseña</h1>
 <p class="text-muted">Debe cambiar su contraseña antes de continuar.</p>
 <form method="post" class="usuarios-form">
 <div class="form-row">
 <label for="current">Contraseña actual</label>
 <input id="current" asp-for="Current" type="password" class="form-control" />
 </div>
 <div class="form-row">
 <label for="new">Nueva contraseña</label>
 <input id="new" asp-for="New" type="password" class="form-control" />
 </div>
 <div class="form-row">
 <label for="confirm">Confirmar nueva contraseña</label>
 <input id="confirm" asp-for="Confirm" type="password" class="form-control" />
 </div>
 <div class="usuarios-actions">
 <button type="submit" class="btn btn-primary">Actualizar</button>
 </div>
 </form>
</section>
